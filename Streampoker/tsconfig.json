{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@security.module": [
        "app/security/security.module"
      ],
      "@shared.module": [
        "app/shared/shared.module"
      ],
      "@core.module": [
        "app/core/core.module"
      ],
      "@data-layer.module": [
        "app/data-layer/data-layer.module"
      ]
    }
  }
}
